@model CourseRegistration.Models.CompanyHR
@using (Html.BeginForm("CompanyInfo", "CompanyHR", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.Partial("CompanyHRdetails", Model)
            </div>
            <div class="col-md-10">
                @Html.Partial("CompanyDetails", Model.Company)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
